{
  "name": "web",
  "private": true,
  "description": "chora web applications and packages",
  "version": "0.0.0",
  "homepage": "https://chora.io",
  "bugs": {
    "url": "https://github.com/chora-io/web/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chora-io/web"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:coop": "turbo run dev --filter=coop",
    "dev:data": "turbo run dev --filter=data",
    "dev:main": "turbo run dev --filter=main",
    "dev:mods": "turbo run dev --filter=mods",
    "dev:scan": "turbo run dev --filter=scan",
    "build": "turbo run build",
    "build:chora": "turbo run build --filter=chora",
    "build:cosmos": "turbo run build --filter=cosmos",
    "build:coop": "turbo run build --filter=coop",
    "build:data": "turbo run build --filter=data",
    "build:main": "turbo run build --filter=main",
    "build:mods": "turbo run build --filter=mods",
    "build:scan": "turbo run build --filter=scan",
    "start": "turbo run start",
    "start:coop": "turbo run start --filter=coop",
    "start:data": "turbo run start --filter=data",
    "start:main": "turbo run start --filter=main",
    "start:mods": "turbo run start --filter=mods",
    "start:scan": "turbo run start --filter=scan",
    "lint": "turbo run lint",
    "lint:chora": "turbo run lint --filter=chora",
    "lint:cosmos": "turbo run lint --filter=cosmos",
    "lint:coop": "turbo run lint --filter=coop",
    "lint:data": "turbo run lint --filter=data",
    "lint:main": "turbo run lint --filter=main",
    "lint:mods": "turbo run lint --filter=mods",
    "lint:scan": "turbo run lint --filter=scan",
    "format": "turbo run format",
    "format:chora": "turbo run format --filter=chora",
    "format:cosmos": "turbo run format --filter=cosmos",
    "format:coop": "turbo run format --filter=coop",
    "format:data": "turbo run format --filter=data",
    "format:main": "turbo run format --filter=main",
    "format:mods": "turbo run format --filter=mods",
    "format:scan": "turbo run format --filter=scan",
    "test": "turbo run test",
    "test:chora": "turbo run test --filter=chora",
    "test:cosmos": "turbo run test --filter=cosmos",
    "test:coop": "turbo run test --filter=coop",
    "test:data": "turbo run test --filter=data",
    "test:main": "turbo run test --filter=main",
    "test:mods": "turbo run test --filter=mods",
    "test:scan": "turbo run test --filter=scan",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:chora": "turbo run clean --filter=chora",
    "clean:cosmos": "turbo run clean --filter=cosmos",
    "clean:coop": "turbo run clean --filter=coop",
    "clean:data": "turbo run clean --filter=data",
    "clean:main": "turbo run clean --filter=main",
    "clean:mods": "turbo run clean --filter=mods",
    "clean:scan": "turbo run clean --filter=scan"
  },
  "devDependencies": {
    "turbo": "^1.10.14"
  }
}
