{
  "name": "web",
  "private": true,
  "description": "chora web projects",
  "version": "0.0.0",
  "homepage": "https://chora.io",
  "bugs": {
    "url": "https://github.com/choraio/web/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/choraio/web"
  },
  "workspaces": {
    "packages": [
      "chora",
      "coop",
      "demo",
      "main",
      "scan"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "lerna run lint --stream",
    "lint-chora": "lerna run --scope chora lint --stream",
    "lint-coop": "lerna run --scope coop lint --stream",
    "lint-demo": "lerna run --scope demo lint --stream",
    "lint-main": "lerna run --scope main lint --stream",
    "lint-scan": "lerna run --scope scan lint --stream",
    "format": "lerna run format --stream",
    "format-chora": "lerna run --scope chora format --stream",
    "format-coop": "lerna run --scope coop format --stream",
    "format-demo": "lerna run --scope demo format --stream",
    "format-main": "lerna run --scope main format --stream",
    "format-scan": "lerna run --scope scan format --stream",
    "test": "lerna run test --stream",
    "test-chora": "lerna run --scope chora test --stream",
    "test-coop": "lerna run --scope coop test --stream",
    "test-demo": "lerna run --scope demo test --stream",
    "test-main": "lerna run --scope main test --stream",
    "test-scan": "lerna run --scope scan test --stream",
    "dev": "lerna run dev --stream",
    "dev-chora": "lerna run --scope chora dev --stream",
    "dev-coop": "lerna run --scope coop dev --stream",
    "dev-demo": "lerna run --scope demo dev --stream",
    "dev-main": "lerna run --scope main dev --stream",
    "dev-scan": "lerna run --scope scan dev --stream",
    "build": "lerna run build --stream",
    "build-chora": "lerna run --scope chora build --stream",
    "build-coop": "lerna run --scope coop build --stream",
    "build-demo": "lerna run --scope demo build --stream",
    "build-main": "lerna run --scope main build --stream",
    "build-scan": "lerna run --scope scan build --stream",
    "serve": "lerna run serve --stream",
    "serve-chora": "lerna run --scope chora serve --stream",
    "serve-coop": "lerna run --scope coop serve --stream",
    "serve-demo": "lerna run --scope demo serve --stream",
    "serve-main": "lerna run --scope main serve --stream",
    "serve-scan": "lerna run --scope scan serve --stream",
    "clean": "lerna run clean --stream",
    "clean-chora": "lerna run --scope chora clean --stream",
    "clean-coop": "lerna run --scope coop clean --stream",
    "clean-demo": "lerna run --scope demo clean --stream",
    "clean-main": "lerna run --scope main clean --stream",
    "clean-scan": "lerna run --scope scan clean --stream",
    "deploy": "sh ./deploy.sh"
  },
  "devDependencies": {
    "lerna": "^6.4.1",
    "typescript": "^4.9.4"
  }
}
