{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "jsx": "react-jsx"
  },
  "include": [
    "index.ts",
    "global.d.ts",
    "module.d.ts",
    "components",
    "contexts",
    "hooks",
    "utils"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
